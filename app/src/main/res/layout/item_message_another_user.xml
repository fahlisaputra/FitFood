<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingStart="8dp"
    android:paddingEnd="8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/tv_userMessageText"
        style="@style/Body1_Poppins_Medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="250dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/rounded_rectangle_white"
        android:gravity="start"
        android:padding="10dp"
        android:textColor="#545454"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Text Message" />

    <TextView
        android:id="@+id/timeAI"
        style="@style/Body2_Poppins_Regular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dummy_time"
        android:layout_marginTop="5dp"
        android:paddingBottom="8dp"
        app:layout_constraintStart_toStartOf="@+id/tv_userMessageText"
        app:layout_constraintTop_toBottomOf="@+id/tv_userMessageText" />

</androidx.constraintlayout.widget.ConstraintLayout>