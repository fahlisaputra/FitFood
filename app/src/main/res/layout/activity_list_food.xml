<!--                    android:paddingStart="130dp"-->
<!--                    android:paddingTop="37dp"-->
<!--                    android:text="@string/add_food" />-->

<!--            </androidx.cardview.widget.CardView>-->

            <Button
                android:id="@+id/btnSearchFood"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/search_food"
                android:backgroundTint="#DEDEDE"
                android:textColor="#323232"
                android:visibility="gone"
                app:cornerRadius="50dp"
                style="@style/Body1_SemiBold"
                android:layout_marginTop="24dp"
                app:layout_constraintEnd_toEndOf="@+id/recyclerView"
                app:layout_constraintStart_toStartOf="@+id/recyclerView"
                app:layout_constraintTop_toBottomOf="@+id/recyclerView" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

    <Button
        android:id="@+id/cekRecButton"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="32dp"
        android:text="@string/cek_rekomendasi"
        style="@style/SubHeading5_Inter_Bold"
        android:backgroundTint="#0E5D70"
        app:cornerRadius="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        tools:alpha="100" />

</androidx.constraintlayout.widget.ConstraintLayout>